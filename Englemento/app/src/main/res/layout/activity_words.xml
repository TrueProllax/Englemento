<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".WordActivity">

    <CheckBox
        android:id="@+id/checkBoxEngOnOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="10dp"
        android:button="@android:drawable/radiobutton_off_background"
        android:checked="true"
        android:text="Английский"
        android:textColor="@color/accent_one"
        android:textColorLink="@color/accent_three"
        app:layout_constraintStart_toEndOf="@+id/checkBoxRusOnOff"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/checkBoxRusOnOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:button="@android:drawable/radiobutton_off_background"
        android:checked="true"
        android:text="Русский"
        android:textColor="@color/accent_one"
        android:textColorLink="@color/accent_three"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/list_reigns"
        android:layout_width="372dp"
        android:layout_height="541dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxRusOnOff" />

    <Button
        android:id="@+id/btnToBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/accent_one"
        android:text="ТЕМЫ"
        android:textColor="@color/background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_reigns" />

    <TextView
        android:id="@+id/textViewTopic"
        android:layout_width="153dp"
        android:layout_height="30dp"
        android:layout_marginTop="18dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Topic"
        android:textAlignment="center"
        android:textColor="@color/accent_one"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>